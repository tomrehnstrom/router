{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:weekly",
    ":approveMajorUpdates",
    ":automergeMinor",
    ":disablePeerDependencies",
    ":maintainLockFilesMonthly",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "ignorePresets": [":ignoreModulesAndTests"],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "postUpdateOptions": ["pnpmDedupe"],
  "ignoreDeps": [
    "@types/node",
    "@types/react",
    "@types/react-dom",
    "node",
    "react",
    "react-dom",
    "react-server-dom-webpack",
    "temp-react",
    "temp-react-dom",
    "typescript",
    "typescript50",
    "typescript51",
    "typescript52",
    "typescript53",
    "typescript54",
    "unplugin",
    "use-sync-external-store",
    "waku"
  ]
}
